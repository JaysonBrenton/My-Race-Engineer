# Runtime
NODE_ENV=development
HOST=0.0.0.0
PORT=3001
TZ=Australia/Sydney
# Base application origin for canonical URLs and auth guard fallbacks (protocol + host + optional port)
APP_URL=http://10.211.55.13:3001
NEXT_TELEMETRY_DISABLED=1

# Database
DATABASE_URL=postgresql://pacetracer:change-me@127.0.0.1:5432/pacetracer?schema=public
PRISMA_LOG_LEVEL=info

# Sessions & security
# SESSION_SECRET must be at least 32 bytes of stable randomness (e.g. generated via `openssl rand -base64 48`).
SESSION_SECRET=<at-least-32-bytes-of-randomness>
# Respect x-forwarded-proto when true (use behind TLS-terminating proxy)
TRUST_PROXY=false
# Cookie secure strategy for session cookies: auto | always | never
# - auto: Secure only when request is HTTPS (proxy header or APP_URL=https)
# - always: Secure everywhere (HTTPS-only deployments)
# - never:  not Secure (debug/LAN-only)
COOKIE_SECURE_STRATEGY=auto
# Comma-separated list of trusted origins for auth POSTs (omit trailing slashes)
ALLOWED_ORIGINS=http://10.211.55.13:3001,http://localhost:3001
# When true, append localhost origins for development guard diagnostics
DEV_TRUST_LOCAL_ORIGINS=true

# Email
MAILER_DRIVER=console
SMTP_URL=smtp://mailer:change-me@localhost:587
MAIL_FROM_EMAIL=no-reply@example.com
MAIL_FROM_NAME="My Race Engineer"

# Logging & telemetry
LOG_LEVEL=info
DISABLE_FILE_LOGS=false
TRACING_ENABLED=false
OTEL_SERVICE_NAME=my-race-engineer
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=

# Features
FEATURE_REQUIRE_EMAIL_VERIFICATION=false
FEATURE_REQUIRE_ADMIN_APPROVAL=false
APPROVAL_TOKEN_TTL_HOURS=48
INGEST_RATE_LIMIT_WINDOW_MS=
INGEST_RATE_LIMIT_MAX_REQUESTS=

# Importer UI toggles (default off)
ENABLE_IMPORT_WIZARD=0
ENABLE_LIVERC_RESOLVER=0
ENABLE_IMPORT_FILE=0
ENABLE_LIVERC_FIXTURE_PROXY=0

# Optional HTTP base remap (already used by proxy work)
LIVERC_HTTP_BASE=

# Public
NEXT_PUBLIC_APP_NAME=My Race Engineer
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3001
# Mirror APP_URL for single-origin deployments
NEXT_PUBLIC_APP_ORIGIN=
